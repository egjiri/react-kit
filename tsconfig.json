{
  "compilerOptions": {
    // Project Options
    "declaration": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "build",
    "removeComments": true,
    "rootDir": "src",
    "target": "ES5",
    // Strict Checks
    "strict": true, // Always set to true and disable the individual checks while transitioning to strict mode
    // Module Resolution
    "baseUrl": "src",
    "esModuleInterop": true,
    // Advanced
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*"
  ]
}
